		label.TextColor3 = Color3.new(0, 0, 0)
		label.Font = Enum.Font.SourceSansBold
		label.TextSize = 22
		label.Parent = contentFrame
	end
end,

	["السكربتات"] = function()
	local scripts = {
		{Title = "vr7", Script = 'loadstring(game:HttpGet("https://rawscripts.net/raw/Universal-Script-VR7-35232"))()'},
