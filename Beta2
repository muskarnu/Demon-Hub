		shield.Size = UDim2.new(0, 200, 0, 40)
		shield.Position = UDim2.new(0, 10, 0, 10)
		shield.BackgroundColor3 = Color3.fromRGB(230, 230, 230)
		shield.TextColor3 = Color3.new(0, 0, 0)
		shield.Parent = contentFrame
